<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>servletBlackJack</display-name>
  <welcome-file-list>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>game.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>XSSFilter</filter-name>
    <filter-class>
        ua.nure.bj.auth.XSSFilter
    </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>XSSFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
    <url-pattern>/login</url-pattern>
    <url-pattern>/register</url-pattern>
    <url-pattern>/user</url-pattern>
    <url-pattern>/complain</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/servererror.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/notfound.jsp</location>
  </error-page>
</web-app>